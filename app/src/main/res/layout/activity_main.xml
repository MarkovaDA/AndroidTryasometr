<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.markova.darya.geolocation.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:columnCount="2">

        <!--заголовки опций-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_row="0"
            android:layout_columnSpan="2">

            <TextView
                android:id="@+id/tvTitleGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_gps"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/tvTitleNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_network"
                android:layout_weight="0.94"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                />
        </LinearLayout>
        <!--значения опций enabled-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_row="1"
            android:layout_columnSpan="2">

            <TextView
                android:id="@+id/tvEnabledGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.83"
                android:gravity="center"
                tools:text="enable" />

            <TextView
                android:id="@+id/tvEnabledNet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="0.99"
                android:gravity="center"
                tools:text="enable" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_columnSpan="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtStatusSending"
                android:text="Data sending status"
                android:gravity="center"
                android:padding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_row="3"
            android:layout_columnSpan="2">
            <Button
                android:id="@+id/btnShowMap"
                android:onClick="onClickShowMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I'm on the map"
                android:gravity="center"
                android:padding="5dp">
            </Button>
            <Button
                android:id="@+id/btnCalibrate"
                android:onClick="onClickCalibrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calibrate"
                android:gravity="center"
                android:padding="5dp">
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_row="4"
            android:layout_columnSpan="2"
            >
            <TextView
                android:text="0"
                android:textSize="24sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtValue" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_row="5"
            android:layout_columnSpan="2">
            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="fill_parent"
                android:layout_height = "200dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/bargraph"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp">
            </com.github.mikephil.charting.charts.BarChart>
        </LinearLayout>
    </GridLayout>
</RelativeLayout>